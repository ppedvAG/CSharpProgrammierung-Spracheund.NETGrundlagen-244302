<Window x:Class="M015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M015"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
        Title="MainWindow" Height="450" Width="300"
		Background="Aqua">
	<!--View -> Toolbox-->
	<!--View -> Properties-->
	<StackPanel>
		<Button Click="Button_Click"
				Content="Zähler++"
				FontSize="24"
				Background="LightGreen"/>
		<TextBlock FontSize="24"
				   Name="Output"
				   TextAlignment="Center"
				   Text="0"/>
		<ComboBox Name="Dropdown"/>
		<ListBox Name="LB"
				 SelectionMode="Extended"/>
		<CheckBox Content="Hallo"/>
		<CheckBox Content="Welt"/>
		<RadioButton Content="Hallo" GroupName="RB"/>
		<RadioButton Content="Welt" GroupName="RB"/>
		<Image Source="ppedv-Logo.png"/>
		<ProgressBar Minimum="0" Maximum="100" Value="50" Height="20"
					 IsIndeterminate="True"
					 Foreground="Orange"/>
		<Slider Minimum="0" Maximum="50" Value="20"/>
		<TextBox Name="Input"/>
	</StackPanel>
</Window>
